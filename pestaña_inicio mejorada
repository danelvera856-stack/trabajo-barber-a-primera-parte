btn_clientes = tk.Button(btn_frame, text="ðŸ“‹ Clientes", width=15,
                         font=("Arial", 14), bg="#F8C471", fg="#1B2631",
                         command=lambda: notebook.select(frame_clientes))
btn_clientes.grid(row=0, column=0, padx=10, pady=5)

btn_servicios = tk.Button(btn_frame, text="ðŸ’ˆ Servicios", width=15,
                          font=("Arial", 14), bg="#F8C471", fg="#1B2631",
                          command=lambda: notebook.select(frame_servicios))
