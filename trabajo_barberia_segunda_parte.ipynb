    "def guardar_turno():\n",
    "    cliente = combo_cliente.get()\n",
    "    servicio = combo_servicio.get()\n",
    "    fecha = entry_fecha.get()\n",
    "    hora = entry_hora.get()\n",
    "    if not cliente or not servicio or not fecha or not hora:\n",
    "        messagebox.showerror(\"!!!\",\"Complete todos los campos del turno.\")\n",
    "        return\n",
    "    with open(\"turnos.csv\", \"a\", newline=\"\", encoding=\"utf-8\") as f:\n",
    "        writer = csv.writer(f)\n",
    "        writer.writerow([cliente, servicio, fecha, hora])\n",
    "    messagebox.showinfo(\"!!\",\"Turno registrado correctamente.\")\n",
    "    combo_cliente.set(\"\")\n",
    "    combo_servicio.set(\"\")\n",
    "    entry_fecha.delete(0, tk.END)\n",
    "    entry_hora.delete(0, tk.END)\n",
    "    mostrar_turnos()\n",
    "\n",
    "def mostrar_turnos():\n",
    "    for i in tabla_turnos.get_children():\n",
    "        tabla_turnos.delete(i)\n",
    "    try:\n",
    "        with open(\"turnos.csv\", newline=\"\", encoding=\"utf-8\") as f:\n",
    "            reader = csv.reader(f)\n",
    "            for fila in reader:\n",
    "                tabla_turnos.insert(\"\", tk.END, values=fila)\n",
    "    except FileNotFoundError:\n",
    "        pass\n",
    "\n",
    "def cargar_clientes_en_combobox():\n",
    "    try:\n",
    "        with open(\"clientes.csv\", newline=\"\", encoding=\"utf-8\") as f:\n",
    "            reader = csv.reader(f)\n",
    "            clientes = [fila[0] for fila in reader]\n",
    "            combo_cliente[\"values\"] = clientes\n",
    "    except FileNotFoundError:\n",
    "        combo_cliente[\"values\"] = []\n",
    "\n",
